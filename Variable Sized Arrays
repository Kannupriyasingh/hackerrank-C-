#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */ 
    int r,q,n_var;
    cin>>r>>q;
    int *arr[r];
    for(int i=0;i<r;i++){
    cin>>n_var;
    arr[i]= new int[n_var];

    for(int j=0;j<n_var;j++){
        cin>>arr[i][j];
    }}



for(int i=0;i<q;i++){
    int val1,val2;
    cin>>val1>>val2;
    cout<<arr[val1][val2]<<endl;
    
}
    return 0;
}
